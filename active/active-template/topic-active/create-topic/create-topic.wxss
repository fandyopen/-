}

.image-preview .image-del {
    position: absolute;
    top: -15rpx;
    right: -15rpx;
    height: 30rpx;
    line-height:30rpx;
    width: 30rpx;
    z-index: 10;
    background: #ff4544;
    color: #fff;
    font-weight: bolder;
    border-radius: 999rpx;
    font-size: 20rpx;
